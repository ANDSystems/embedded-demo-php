{% extends 'templates/app.twig' %}

{% block content %}
    {% include 'templates/navigation.twig' with {'categories': categories } %}
    <div class="wrap">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <h3>Миний захиалга</h3>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Огноо</th>
                    <th class="text-center">Нийт үнэ</th>
                    <th>Төлөв</th>
                </tr>
                </thead>
                <tbody>
                {% for order in list %}
                    <tr>
                        <td>{{ order.created_at }}</td>
                        <td>{{ order.amount|number_format(0, '.', ',') }}₮</td>
                        <td>{{ order.status }}</td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}